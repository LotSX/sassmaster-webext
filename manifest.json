{
  "manifest_version": 2,
  "name": "Sassmaster WebExt",
  "version": "1.0",
  "applications": {
    "gecko": {
      "id": "heresanid@foo.com"
    }
  },
  "permissions": [
    "tabs",
    "bookmarks",
    "activeTab",
    "contextMenus"
  ],
  "browser_action": {
    "browser_style": true,
    "default_title": "Sassy",
    "default_popup": "choose-lang.html"
  },
  "background": {
    "scripts": ["background.js"]
  }
}
